@inject ILogger<TestTableComponent> Logger
@inject ITestStore TestStore
@inject ITestService TestService
@implements IDisposable

<DataGrid @ref="_tableRef"
          TItem="TestTableModel"
          Data="@_testList"
          ReadData="@OnReadData"
          TotalItems="@_totalTests"
          ShowPager
          Responsive
          Sortable="false"
          Filterable="false">
    <DataGridColumns>
        <DataGridCommandColumn/>
        <DataGridColumn Field="@nameof(TestTableModel.TestDate)" Caption="Data">
            <DisplayTemplate>
                @{
                    var dateTime = (context as TestTableModel)?.TestDate;

                    if (dateTime != null)
                    {
                        @(dateTime.Value.ToString("dd.MM.yyyy HH:mm"))
                    }
                }
            </DisplayTemplate>
        </DataGridColumn>
        <DataGridColumn Field="@nameof(TestTableModel.TestTypeName)" Caption="Typ" Editable/>
        <DataGridColumn Field="@nameof(TestTableModel.ExecutorName)" Caption="Imię" Editable/>
        <DataGridColumn Field="@nameof(TestTableModel.TestLenght)" Caption="Długość" Editable/>
        <DataGridColumn Field="@nameof(TestTableModel.Mistakes)" Caption="Błędy" Editable/>
        <DataGridColumn Field="@nameof(TestTableModel.CompletionTime)" Caption="Czas" Editable>
            <DisplayTemplate>
                @{
                    var completionTime = (context as TestTableModel)?.CompletionTime;

                    if (completionTime != null)
                    {
                        @(completionTime.Value.Humanize())
                    }
                }
            </DisplayTemplate>
        </DataGridColumn>
        <DataGridColumn Field="@nameof(TestTableModel.EffectivenessPercentage)" Caption="Skuteczność" Editable/>
        <DataGridColumn Field="@nameof(TestTableModel.ClickPerSecond)" Caption="Kliknięć na sekundę" Editable/>
        <DataGridColumn Field="@nameof(TestTableModel.OverallRating)" Caption="Ogólna ocena" Editable/>
    </DataGridColumns>
    <EmptyTemplate>
        <Paragraph>Brak testów</Paragraph>
    </EmptyTemplate>
    <LoadingTemplate>
        <SpinKit Type="SpinKitType.Fold" Size="1rem" Centered="true"/>
    </LoadingTemplate>
</DataGrid>

@code{

    private DataGrid<TestTableModel> _tableRef;
    private IReadOnlyList<TestTableModel> _testList;
    private int _totalTests;

    protected override void OnInitialized()
    {
        TestStore.TestUpdated += TestStoreOnTestUpdated;
        base.OnInitialized();
    }

    private async void TestStoreOnTestUpdated(object? sender, Test e)
    {
        await _tableRef.Reload();
    }

    private async Task OnReadData(DataGridReadDataEventArgs<TestTableModel> e)
    {
        if (e.CancellationToken.IsCancellationRequested)
            return;

        var skip = (e.Page - 1) * e.PageSize;
        var take = e.PageSize;

        var response = await TestStore.GetTableData(skip, take);

        _testList = response.TestList.Select(x =>
        {
            var testStatistic = TestService.GetTestStatistic(x);
            return new TestTableModel
            {  
                TestType = x.TestType,
                TextToRewritten = x.TextToRewritten,
                ExecutorName = x.ExecutorName,
                TestDate = x.TestDate,
                InorrectClicks = x.InorrectClicks,
                TotalClicks = x.TotalClicks,
                StartTime = x.StartTime,
                EndTime = x.EndTime,
                TestLenght = testStatistic.TestLenght,
                EffectivenessPercentage = testStatistic.EffectivenessPercentage,
                ClickPerSecond = testStatistic.ClickPerSecond,
                CompletionTime = testStatistic.CompletionTime,
                Mistakes = testStatistic.Mistakes,
                OverallRating = testStatistic.OverallRating
            };
        }).ToList();

        _totalTests = response.TestCount;
    }

    public void Dispose()
    {
        TestStore.TestUpdated -= TestStoreOnTestUpdated;
    }

}